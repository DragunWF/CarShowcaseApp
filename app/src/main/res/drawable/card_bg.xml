<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set the background color (optional) -->
    <solid android:color="@android:color/white" /> <!-- White background or any color you want -->

    <!-- Set the border (stroke) -->
    <stroke
        android:color="#000000"
    android:width="2dp" />

    <!-- Set the corner radius (round the corners) -->
    <corners android:radius="15dp" /> <!-- Rounded corners radius -->

    <!-- Set the padding (optional, adjust to your needs) -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
</shape>